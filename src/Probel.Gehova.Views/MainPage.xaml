<Page
    x:Class="Probel.Gehova.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Probel.Gehova.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <NavigationView x:Name="rootNavigation" SelectionChanged="OnRootNavigation">
        <NavigationView.MenuItems>
            <NavigationViewItem
                x:Name="UserView"
                x:Uid="Menu_Visualisation"
                Icon="Calendar" />
            <NavigationViewItem
                x:Name="ProvisioningView"
                x:Uid="Menu_Provisioning"
                Icon="People" />
            <NavigationViewItem
                x:Name="AdminView"
                x:Uid="Menu_Admin"
                Icon="Admin" />
        </NavigationView.MenuItems>
        <Frame x:Name="contentFrame" />
    </NavigationView>
</Page>
